@model Tateeda.Clires.Areas.Admin.Model.Report.ReportModel
@{
	ViewBag.Title = "Reports";
	Layout = ViewBag.Layout;
}

@section scripts{
    @System.Web.Optimization.Scripts.Render(
    "~/Scripts/custom/canvasXpress/canvasXpress.js",
    "~/Scripts/app/Admin/Reports/reports.js"
    )
}

<div class="site-title">Study Summary</div>
    <div class="row-fluid">
        
        <div class="span6">
            <script type="text/javascript">                
                var sitesNames = @Html.Raw(Model.SubjectsReportModel.SitesNameJSON);
                var subjects = @Model.SubjectsReportModel.SubjectsPerSiteJSON;
                var visits = @Model.SubjectsReportModel.VisitsJsonArray;
                var forms = @Model.SubjectsReportModel.FormsJsonArray;                
            </script>

            <canvas id="canvSubjectsStats" width="400" height="400">
                <h3>This browser does not support 'Canvas'</h3>
            </canvas>
            <canvas id="canvVisitStats" width="400" height="400">
                <h3>This browser does not support 'Canvas'</h3>
            </canvas>    
            <canvas id="canvFormsStats" width="400" height="400">
                    <h3>This browser does not support 'Canvas'</h3>
            </canvas>
       </div>
    <div class="span6">
            @Html.Partial("Report/_StudySummaryReport")
    </div>    
</div>